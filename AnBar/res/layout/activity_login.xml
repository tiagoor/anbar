<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/titvlo_inicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titvlo_inicial"
        android:textSize="18dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/email"
        android:layout_below="@+id/senha"
        android:layout_marginTop="47dp"
        android:text="@string/penetrar" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/titvlo_inicial"
        android:text="Email"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/senha"
        android:layout_alignRight="@+id/senha"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/senha"
        android:layout_alignBottom="@+id/senha"
        android:layout_alignLeft="@+id/textView1"
        android:text="Senha"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titvlo_inicial"
        android:layout_marginTop="134dp"
        android:layout_toRightOf="@+id/titvlo_inicial"
        android:ems="10"
        android:inputType="numberPassword" />

</RelativeLayout>